# compiler type
CC = gcc

# source files
SRC = main.c school.c

# object files
OBJ = $(SRC:.c=.o)

# name of executable
NAME = school

# program to delete files
RM = rm -f

# cflags
CFLAGS = -Wall -Werror -Wextra -pedantic

# compile all
all: $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

# Rule to clean up temporary files and executable
clean: $(RM) *~ $(NAME)

# Rule to clean only object files
oclean:
	$(RM) $(OBJ)

# Rule to clean every thisng including objecfiles and executable
fclean: clean oclean

# Rule to forece rebuild everything
re: fclean all
